{
  "name": "finance-service",
  "version": "1.0.0",
  "description": "Serviço de gestão financeira",
  "main": "index.js",
  "scripts": {
    "build": "rimraf public && npm run copy-views-to-public && npm run compile-to-public",
    "build:watch": "rimraf public && npm run copy-views-to-public && npm run compile-to-public -- --w",
    "compile-to-public": "tsc -p tsconfig-build.json",
    "copy-assets-to-public": "cp -r src/assets public",
    "copy-authentication-views-to-public": "cp -r src/infrastructure/authentication/views public",
    "copy-views-to-public": "npm run create-views-in-public && npm run copy-assets-to-public && npm run copy-authentication-views-to-public",
    "create-views-in-public": "mkdir public",
    "test": "ENVIRONMENT=Test jest --passWithNoTests --noStackTrace --runInBand --no-cache --detectOpenHandles --forceExit",
    "test:ci": "npm run test --coverage",
    "test:staged": "npm run test --silent",
    "typeorm": "node ./node_modules/typeorm/cli.js",
    "sonar:scanner": "npm run test:ci && npx sonar-scanner -Dsonar.host.url=$SONAR_HOST -Dsonar.projectKey=FINANCE-SERVICE",
    "server:debug": "nodemox -L --watch ./public --inspect=0.0.0.0:$DEBUG_PORT --ignore node_modules public/main/application/http/server.js",
    "server:up": "nodemon --ignore node_modules public/main/application/http/server.js",
    "server:up:prod": "nodemon --watch public/main public/main/application/http/server.js"
  },
  "keywords": [],
  "author": "Allan Gaby",
  "license": "Apache License Version 2.0",
  "devDependencies": {
    "@types/amqplib": "^0.8.1",
    "@types/bcrypt": "^5.0.0",
    "@types/ejs": "^3.1.0",
    "@types/exceljs": "^1.3.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.7",
    "@types/imap": "^0.8.35",
    "@types/ioredis": "^4.27.8",
    "@types/jest": "^27.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mailparser": "^3.4.0",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.7",
    "@types/passport-google-oauth": "^1.0.42",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/typescript": "^2.0.0",
    "@types/uuid": "^8.3.4",
    "@types/xlsx": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^3.2.6",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^11.1.2",
    "rimraf": "^3.0.2",
    "sonarqube-scanner": "^2.8.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "_moduleAliases": {
    "@": "public"
  },
  "dependencies": {
    "@types/joi": "^17.2.3",
    "amqplib": "^0.8.0",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "excel4node": "^1.7.2",
    "exceljs": "^4.3.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "googleapis": "^100.0.0",
    "imap": "^0.8.19",
    "ioredis": "^4.28.0",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mailparser": "^3.4.0",
    "module-alias": "^2.2.2",
    "node-2fa": "^2.0.3",
    "nodemailer": "^6.7.2",
    "nodemon": "^2.0.12",
    "passport": "^0.5.2",
    "passport-google-oauth": "^2.0.0",
    "pg": "^8.7.1",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.36",
    "uuid": "^8.3.2",
    "xlsx": "^0.18.3"
  }
}
